[mahyuddin@cust-vpls-a-r3] > /export
/interface bridge
add name=loopback0
/interface ethernet
set [ find default-name=ether1 ] disable-running-check=no mtu=9000
set [ find default-name=ether2 ] disable-running-check=no mtu=9000
set [ find default-name=ether3 ] disable-running-check=no mtu=9000
set [ find default-name=ether4 ] disable-running-check=no mtu=9000
set [ find default-name=ether5 ] disable-running-check=no mtu=9000
set [ find default-name=ether6 ] disable-running-check=no mtu=9000
set [ find default-name=ether7 ] disable-running-check=no mtu=9000
set [ find default-name=ether8 ] disable-running-check=no mtu=9000
set [ find default-name=ether9 ] disable-running-check=no mtu=9000
set [ find default-name=ether10 ] disable-running-check=no mtu=9000
/interface wireless security-profiles
set [ find default=yes ] supplicant-identity=MikroTik
/routing bgp instance
set default as=138074 cluster-id=100.122.0.3 router-id=100.122.0.3
/routing ospf instance
set [ find default=yes ] mpls-te-area=backbone mpls-te-router-id=loopback0 redistribute-connected=as-type-1 redistribute-static=as-type-1 router-id=100.122.0.3
/ip address
add address=100.122.0.3 interface=loopback0 network=100.122.0.3
add address=100.122.6.3/28 interface=ether6 network=100.122.6.0
/ip dhcp-client
add disabled=no interface=ether1
add dhcp-options=hostname,clientid interface=ether1
/mpls ldp
set enabled=yes loop-detect=yes lsr-id=100.122.0.3 transport-address=100.122.0.3
/mpls ldp interface
add interface=loopback0 transport-address=100.122.0.3
add interface=ether2 transport-address=100.122.0.3
add interface=ether3 transport-address=100.122.0.3
/routing bgp network
add network=100.122.0.0/16 synchronize=no
/routing ospf network
add area=backbone network=100.122.0.3/32
add area=backbone network=100.122.6.0/28
/system identity
set name=cust-vpls-a-r3
/tool romon
set enabled=yes



[mahyuddin@cust-vpls-a-r3] > /quit
