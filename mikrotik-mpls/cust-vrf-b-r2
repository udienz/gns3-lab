/interface bridge
add name=loopback0
/interface ethernet
set [ find default-name=ether1 ] disable-running-check=no mtu=9000
set [ find default-name=ether2 ] disable-running-check=no mtu=9000
set [ find default-name=ether3 ] disable-running-check=no mtu=9000
set [ find default-name=ether4 ] disable-running-check=no mtu=9000
set [ find default-name=ether5 ] disable-running-check=no mtu=9000
set [ find default-name=ether6 ] disable-running-check=no mtu=9000
set [ find default-name=ether7 ] disable-running-check=no mtu=9000
set [ find default-name=ether8 ] disable-running-check=no mtu=9000
set [ find default-name=ether9 ] disable-running-check=no mtu=9000
set [ find default-name=ether10 ] disable-running-check=no mtu=9000
/interface wireless security-profiles
set [ find default=yes ] supplicant-identity=MikroTik
/routing bgp instance
set default as=65002 confederation=58381 confederation-peers=65000-65001,65003-65009 router-id=100.123.0.2
/routing ospf instance
set [ find default=yes ] mpls-te-area=backbone mpls-te-router-id=loopback0 redistribute-connected=as-type-1 redistribute-static=as-type-1 router-id=100.123.0.2
/ip address
add address=100.123.0.2 interface=loopback0 network=100.123.0.2
add address=100.123.72.2/28 interface=ether7 network=100.123.72.0
/ip dhcp-client
add disabled=no interface=ether1
add dhcp-options=hostname,clientid interface=ether1
/mpls ldp
set enabled=yes loop-detect=yes lsr-id=100.123.0.2 transport-address=100.123.0.2 use-explicit-null=yes
/mpls ldp interface
add interface=loopback0 transport-address=100.123.0.2
add interface=ether2 transport-address=100.123.0.2
add interface=ether3 transport-address=100.123.0.2
/routing bgp network
add disabled=yes network=100.123.0.0/16 synchronize=no
add network=100.123.2.0/24 synchronize=no
/routing bgp peer
add multihop=yes name=transit remote-address=100.123.0.0 remote-as=65000 route-reflect=yes ttl=default update-source=loopback0
/routing ospf network
add area=backbone network=100.123.0.2/32
add area=backbone network=100.123.72.0/28
/system identity
set name=cust-vrf-b-r2
/tool romon
set enabled=yes



[mahyuddin@cust-vrf-b-r2] > /quit
